= form_tag upload_index_path, multipart: true do
  .row.form-group
    .col-md-6.col-xs-6
      = label_tag(nil, "File Input")
      = file_field_tag(:csv, type: "file", :class => "")
  .row.form-group
    .col-md-6.col-xs-6
      = label_tag(nil, "GA Property ID")
      = collection_select(nil, :property_id, Property.all, :id, :ga_property_id, {:selected => @property.id}, {:class => "form-control input-lg"})
  .row.form-group
    .col-md-6.col-xs-6
      = label_tag(nil, "Source Type")
      = collection_select(nil, :source_id, Source.all, :id, :name, {}, {:class => "form-control input-lg"})
  .row.form-group
    .col-md-6.col-xs-6
      = label_tag(nil, "Upload Data For")
      = date_field(nil, :date, type: "date", :class => "form-control input-lg")
  = submit_tag("Upload", :class => "btn btn-primary")